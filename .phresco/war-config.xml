<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<assembly>
    <baseDirectory>/</baseDirectory>
    <formats>
        <format>war</format>
    </formats>
	
    <fileSets>

        <fileSet>
            <directory>${basedir}/do_not_checkin/target/classes</directory>
            <outputDirectory>/WEB-INF/classes</outputDirectory>
            <excludes>
                <exclude>/js/**</exclude>
                <exclude>/resources/**</exclude>
                <exclude>/css/**</exclude>
                <exclude>/images/**</exclude>
                <exclude>*.html</exclude>
                <exclude>*.jsp</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>/js/**</include>
                <include>/resources/**</include>
                <include>/css/**</include>
                <include>/images/**</include>
                <include>*.html</include>
                <include>*.jsp</include>
            </includes>
        </fileSet>

        <fileSet id="excludeFile">
            <directory>${basedir}/src/main/webapp</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/do_not_checkin/target/jstest/overlays/jslibraries.files/jslib_yui</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>/yui/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/do_not_checkin/target/jstest/overlays</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>/jslibraries/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/do_not_checkin/target</directory>
            <outputDirectory>/WEB-INF</outputDirectory>
            <includes>
                <include>/lib/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/WEB-INF/classes</outputDirectory>
            <excludes>
                <exclude>/js/**</exclude>
                <exclude>/resources/**</exclude>
                <exclude>/css/**</exclude>
                <exclude>*.html</exclude>
                <exclude>*.jsp</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <outputDirectory>/resources</outputDirectory>
            <excludes>
                <exclude>/js/**</exclude>
                <exclude>/resources/**</exclude>
                <exclude>/css/**</exclude>
                <exclude>*.html</exclude>
                <exclude>*.jsp</exclude>
            </excludes>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>

    </fileSets>

</assembly>
